@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}


<a asp-action="Create" class="btn btn-success">Add Role</a>

<br />


@if (Model.Count() > 0)
{
    <h1>All Roles</h1>


    @*  Search *@


    <div class="m-2">
        <form class="row offset-2" asp-action="Index">

            <div class="col-8">
                <input class="form-control" type="text" placeholder="Role's Name" name="SearchValue" />
            </div>
            <div class="col-4">
                <input class="btn btn-info" type="submit" value="Search" />
            </div>

        </form>

    </div>

    <table class="table table-striped table-hover mt-3">

        <thead>
            <tr>
                <td>@Html.DisplayNameFor(u => u.Id)</td>
                <td>@Html.DisplayNameFor(u => u.RoleName)</td>
                

                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>


            </tr>
        </thead>

        <tbody>

            @foreach (var Role in Model)
            {
                <tr>

                    <td>@Html.DisplayFor(u => Role.Id)</td>
                    <td>@Html.DisplayFor(u => Role.RoleName)</td>
                    







                    <partial name="_ButtonsPartialViews" model="@Role.Id.ToString()" />
                </tr>
            }

        </tbody>
    </table>

}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There Is No Roles </h3>
    </div>
}



