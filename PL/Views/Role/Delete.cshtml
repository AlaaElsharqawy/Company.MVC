@model RoleViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Are You Sure You Want To Delete @Model.RoleName Role ??</h1>

@* show Error Message*@
<div asp-validation-summary="All"></div>

<form asp-action="ConfirmDelete" >


    <div class="form-group">
    <label class="col-form-label" asp-for="Id"></label>
    <input readonly class="form-control" asp-for="Id" />

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="RoleName"></label>
        <input readonly class="form-control" asp-for="RoleName" />

    </div>

   

    <input type="submit" value="Delete" class="btn btn-danger" />|

    <a asp-action="Index" asp-controller="Role" class="btn btn-secondary">Cancel</a>


</form>