@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.RoleName Role</h1>

<form asp-action="Edit" enctype="multipart/form-data">

    <div asp-validation-summary="All"></div>

<div class="form-group">
    <label class="col-form-label" asp-for="Id"></label>
    <input readonly class="form-control" asp-for="Id" />
        

</div>

<div class="form-group">
    <label class="col-form-label" asp-for="RoleName"></label>
    <input  class="form-control" asp-for="RoleName" />
        <span asp-validation-for="RoleName" class="text-danger"></span>

</div>

    <div class="my-5">
        <a class="btn btn-info" asp-action="AddOrRemoveUsers" asp-controller="Role" asp-route-roleId="@Model.Id">AddOrRemoveUsers </a>
    </div>

    <input type="submit" value="Save" class="btn btn-primary" /> |
    <a asp-action="Index" asp-controller="Role" class="btn btn-light">Back To List</a>

</form>

