@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}








@if (Model.Count() > 0)
{
    <h1>All Users</h1>


    @*  Search *@


    <div class="m-2">
        <form class="row offset-2" asp-action="Index" >

            <div class="col-8">
                <input class="form-control" type="text" placeholder="User's Email" name="SearchValue" />
            </div>
            <div class="col-4">
                <input class="btn btn-info" type="submit" value="Search" />
            </div>

        </form>

    </div>

    <table class="table table-striped table-hover mt-3">

        <thead>
            <tr>
                <td>@Html.DisplayNameFor(u => u.Id)</td>
                <td>@Html.DisplayNameFor(u => u.FName)</td>
                <td>@Html.DisplayNameFor(u => u.LName)</td>
                <td>@Html.DisplayNameFor(u => u.Email)</td>
                <td>@Html.DisplayNameFor(u => u.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(u => u.Roles)</td>
               
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>


            </tr>
        </thead>

        <tbody>

            @foreach (var user in Model)
            {
                <tr>
                    
                    <td>@Html.DisplayFor(u=>user.Id)</td>
                    <td>@Html.DisplayFor(u=>user.FName)</td>
                    <td>@Html.DisplayFor(u=>user.LName)</td>
                    <td>@Html.DisplayFor(u=>user.Email)</td>
                    <td>@Html.DisplayFor(u=>user.PhoneNumber)</td>
                    <td>@string.Join(",",user.Roles)</td>
                   

                


                 

                    <partial name="_ButtonsPartialViews" model="@user.Id.ToString()" />
                </tr>
            }

        </tbody>
    </table>

}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There Is No Users </h3>
    </div>
}

